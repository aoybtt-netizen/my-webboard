<body>

    <div class="container">
        <div class="header-btns">
            <button class="back-btn" onclick="goBack()">‚¨Ö ‡∏Å‡∏•‡∏±‡∏ö‡∏´‡∏ô‡πâ‡∏≤‡∏´‡∏•‡∏±‡∏Å</button>
            <button id="restart-btn" class="restart-btn" onclick="restartRoom()">üîÑ ‡∏£‡∏µ‡∏™‡∏ï‡∏≤‡∏£‡πå‡∏ó‡∏´‡πâ‡∏≠‡∏á</button>
        </div>
        
        <h1 id="room-title" style="margin-top:0;">‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡∏´‡πâ‡∏≠‡∏á‡πÅ‡∏ä‡∏ó...</h1>
        <div style="color:gray; font-size:0.9em; margin-bottom: 15px;">‡πÇ‡∏î‡∏¢ <span id="room-author">...</span> ‚Ä¢ <span id="room-time">...</span></div>
        <p id="room-content" style="font-size:1em; line-height:1.4; color:#555; border-left: 3px solid #ccc; padding-left: 10px;">...</p>
        
        <hr style="margin: 10px 0;">

        <div id="chat-messages" class="chat-messages">
            </div>

        <div id="chat-input" class="chat-input">
            <input type="text" id="message-input" placeholder="‡∏û‡∏¥‡∏°‡∏û‡πå‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°..." autocomplete="off">
            <button onclick="sendMessage()">‡∏™‡πà‡∏á</button>
        </div>
        
        <div id="closed-msg" style="display:none; color:red; text-align:center; margin-top:20px;">üîí ‡∏´‡πâ‡∏≠‡∏á‡πÅ‡∏ä‡∏ó‡∏ô‡∏µ‡πâ‡∏ñ‡∏π‡∏Å‡∏õ‡∏¥‡∏î‡πÅ‡∏•‡πâ‡∏ß</div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const urlParams = new URLSearchParams(window.location.search);
        const roomId = urlParams.get('id'); // <-- ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏ä‡∏∑‡πà‡∏≠‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£
        const myUsername = localStorage.getItem('myUsername');

        if (!myUsername || !roomId) {
            alert('‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏´‡∏£‡∏∑‡∏≠‡∏´‡πâ‡∏≠‡∏á‡πÅ‡∏ä‡∏ó');
            location.href = '/';
        }

        socket.on('connect', () => {
            socket.emit('register', myUsername);
            socket.emit('join-room', { roomId, username: myUsername }); // <-- ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô Socket Event
        });

        socket.on('access-granted', (room) => { // <-- ‡∏£‡∏±‡∏ö room ‡πÅ‡∏ó‡∏ô post
            document.body.style.display = 'flex';
            renderRoom(room);
        });

        socket.on('access-denied', (reason) => {
            alert(reason);
            location.href = '/';
        });

        socket.on('force-leave', (reason) => {
            alert(reason);
            location.href = '/'; 
        });

        socket.on('restart-success', (msg) => {
            alert(msg);
        });

        // --- NEW: ‡∏£‡∏±‡∏ö‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡πÉ‡∏´‡∏°‡πà‡πÅ‡∏ö‡∏ö Real-time ---
        socket.on('new-room-message', (data) => {
            if(data.roomId == roomId) {
                appendMessage(data.message);
            }
        });
        
        function renderRoom(room) { // <-- ‡∏£‡∏±‡∏ö room ‡πÅ‡∏ó‡∏ô post
            document.getElementById('room-title').innerText = room.title;
            document.getElementById('room-author').innerText = room.author;
            document.getElementById('room-time').innerText = new Date(room.id).toLocaleString();
            document.getElementById('room-content').innerText = room.content;
            
            const chatBox = document.getElementById('chat-messages');
            chatBox.innerHTML = room.messages.map(m => createMessageHTML(m)).join(''); // <-- ‡πÉ‡∏ä‡πâ messages
            chatBox.scrollTop = chatBox.scrollHeight;

            if (myUsername === room.author || myUsername === 'Admin') {
                document.getElementById('restart-btn').style.display = 'block';
            }

            if (room.isClosed) {
                document.getElementById('chat-input').style.display = 'none';
                document.getElementById('closed-msg').style.display = 'block';
            }
        }
        
        function createMessageHTML(message) {
            const isMine = message.author === myUsername;
            const floatClass = isMine ? 'my-msg' : 'other-msg';
            
            return `
                <div class="chat-msg ${floatClass}">
                    <b>${message.author}</b>: ${message.content}
                    <div style="font-size:0.75em; opacity:0.7; text-align:${isMine ? 'right' : 'left'};">${new Date(message.timestamp).toLocaleTimeString()}</div>
                </div>
            `;
        }
        
        function appendMessage(message) {
            const chatBox = document.getElementById('chat-messages');
            chatBox.insertAdjacentHTML('beforeend', createMessageHTML(message));
            chatBox.scrollTop = chatBox.scrollHeight;
        }

        // --- NEW: ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡πà‡∏á‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏ú‡πà‡∏≤‡∏ô Socket.io ---
        function sendMessage() {
            const input = document.getElementById('message-input');
            const content = input.value.trim();
            if(!content) return;
            
            // ‡∏™‡πà‡∏á Socket Event ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡πÉ‡∏ô‡∏´‡πâ‡∏≠‡∏á‡πÅ‡∏ä‡∏ó
            socket.emit('room-message', { roomId: roomId, sender: myUsername, msg: content }); 
            
            input.value = '';
        }

        function restartRoom() {
            if(confirm('‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏£‡∏µ‡∏™‡∏ï‡∏≤‡∏£‡πå‡∏ó‡∏´‡πâ‡∏≠‡∏á‡πÉ‡∏ä‡πà‡πÑ‡∏´‡∏°? (‡∏Ñ‡∏ô‡∏ó‡∏µ‡πà‡∏î‡∏π‡∏≠‡∏¢‡∏π‡πà‡∏à‡∏∞‡∏ñ‡∏π‡∏Å‡πÄ‡∏ï‡∏∞‡∏≠‡∏≠‡∏Å‡∏ó‡∏±‡∏ô‡∏ó‡∏µ ‡∏¢‡∏Å‡πÄ‡∏ß‡πâ‡∏ô Admin ‡πÅ‡∏•‡∏∞‡πÄ‡∏à‡πâ‡∏≤‡∏Ç‡∏≠‡∏á‡∏´‡πâ‡∏≠‡∏á)')) {
                socket.emit('restart-room', roomId); // <-- ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô Socket Event
            }
        }

        function goBack() {
            socket.emit('leave-room', roomId); // <-- ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô Socket Event
            location.href = '/';
        }
        
        // --- Event Listeners ---
        window.onbeforeunload = function() { socket.emit('leave-room', roomId); }; // <-- ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô Socket Event
        document.getElementById('message-input').addEventListener('keypress', (e) => { if(e.key === 'Enter') sendMessage(); });
    </script>
